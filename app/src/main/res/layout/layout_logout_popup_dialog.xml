<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_logout"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitleLogoutPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/logout_prompt"
        android:textColor="#272727"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNegativeLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_custom_logout"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="#272727"
        app:layout_constraintEnd_toStartOf="@id/btnPositiveLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleLogoutPrompt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPositiveLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_custom_yellow"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnNegativeLogout"
        app:layout_constraintTop_toBottomOf="@id/tvTitleLogoutPrompt" />

</androidx.constraintlayout.widget.ConstraintLayout>